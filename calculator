#include <iostream>
using namespace std;
void sum (int c,int d)
{
	cout<<c+d;
}
void subtraction (int c,int d)
{
	cout<<c-d;
}
void multiplication (int c,int d)
{
	cout<<c*d;
}
void division (int c,int d)
{
	cout<<c/d;
}
int main()
{
	int a,b,c;
	cout<<"Enter to values"<<endl;
	cin>>a>>b;
	cout<<"Enter 1 for Addition"<<endl<<"for Substraction 2"<<endl<<" for Multiplication 3"<<endl<<"for Division 4"<<endl;
	cin>>c;
	if(c==1)
	{
		sum(a,b);
	}
	else if (c==2)
	{
		subtraction(a,b);
	}
	else if (c==3)
	{
		multiplication(a,b);
	}
	else if (c==4)
	{
		division(a,b);
	}
	else 
	{
		cout<<"Please provide valid input"<<endl;
	}
	return 0;
}
